<%= form_with url: url, method: :get, data: data, class: classes do |_| %>
  <%= render Form::LabelComponent.new(
    label_for: StreamingTracks::FORM_ID,
    classes: label_classes(StreamingTracks::FORM_ID),
  ) do %>
    アルバムID
  <% end %>
  <%= render Input::Component.new(
    type: input_type(StreamingTracks::FORM_ID),
    id: StreamingTracks::FORM_ID,
    icon: "fas fa-compact-disc",
    button_label: "Go",
    value: params[:id],
  ) %>
  <%= render Form::LabelComponent.new(
    label_for: StreamingTracks::FORM_QUERY,
    classes: label_classes(StreamingTracks::FORM_QUERY),
  ) do %>
    アルバム名
  <% end %>
  <%= render Input::Component.new(
    type: input_type(StreamingTracks::FORM_QUERY),
    id: StreamingTracks::FORM_QUERY,
    icon: "fas fa-compact-disc",
    button_label: "Go",
    value: params[:query],
  ) %>
<% end %>
