<div class="max-w-2xl px-4 py-10 mx-auto">
  <%= render Card::Component.new(
    classes: "px-8 pb-10 mx-auto",
  ) do |component| %>
    <% component.with_header do %>
      <%= render Users::Sessions::HeaderComponent.new %>
    <% end %>
    <% component.with_description do %>
      <%= render Users::Sessions::FormComponent.new(
        url: url,
        classes: "#{description_classes} mt-8",
      ) %>
      <div class="<%= description_classes %> mt-8 flex justify-end">
        <%= new_password_link %>
      </div>
      <div class="<%= description_classes %> mt-4 flex justify-end">
        <%= sign_up_link %>
      </div>
    <% end %>
  <% end %>
</div>

