<%= render List::Component.new(
  item_classes: "h-20 mb-4",
  leading_classes: "h-12 mb-12",
  trailing_classes: "h-12 mb-12",
  classes: classes,
) do |component| %>
  <% tracks.each_with_index do |track, index| %>
    <% component.with_leading do %>
      <%= index + 1 %>
    <% end %>
    <% component.with_item do %>
      <%= render Albums::TrackComponent.new(
        track,
      ) %>
    <% end %>
    <% component.with_trailing do %>
      <%= duration(track[:duration_ms]) %>
    <% end %>
  <% end %>
<% end %>
