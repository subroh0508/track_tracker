<div class="flex flex-col <%= classes %>">
  <%= render List::ItemComponent.new(
    header: track[:title],
    description: description,
  ) %>
  <div class="flex items-center mt-2">
    <% if track[:spotify_id].present? %>
      <%= render Link::IconComponent.new(
        href: url_spotify,
        target: "_blank",
        active: true,
        icon: "fab fa-spotify fa-lg",
        active_text_color: "text-spotify",
      ) %>
    <% end %>
    <% if track[:youtube_music_id].present? %>
      <%= render Link::IconComponent.new(
        href: url_youtube_music,
        target: "_blank",
        active: true,
        icon: "fab fa-youtube fa-lg",
        active_text_color: "text-youtubemusic",
      ) %>
    <% end %>
    <% if track[:apple_music_id].present? %>
      <%= render Link::IconComponent.new(
        href: url_youtube_music,
        target: "_blank",
        active: true,
        icon: "fab fa-apple fa-lg",
        active_text_color: "text-applemusic",
      ) %>
    <% end %>
  </div>
</div>
