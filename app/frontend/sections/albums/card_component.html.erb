<%= render Card::Component.new(
  classes: classes,
) do |component| %>
  <% component.with_thumbnail do %>
    <%= render Card::ImageComponent.new(
      src: thumbnail_url,
    )%>
  <% end %>
  <% component.with_header do %>
    <%= render Card::SmallHeaderComponent.new(
      classes: header_classes,
    ) do %>
      <%= title %>
    <% end %>
  <% end %>
  <% component.with_description do %>
    <%= render Card::DescriptionComponent.new(
      classes: description_classes,
    ) do %>
      <%= description %>
    <% end %>
  <% end %>
<% end %>
