<div>
  <%= render SearchInput::Component.new(
    id: "query",
    label: "Go",
    placeholder: "Input Album Title...",
    url: "search",
    method: "get",
    data: { turbo_frame: "brands" },
    classes: "mb-3",
  ) %>
  <div class="flex items-center justify-between">
    <span>
      <i class="<%= icon_spotify_classes %>"></i>
      <i class="<%= icon_youtube_classes %>"></i>
      <i class="<%= icon_apple_classes %>"></i>
    </span>
    <div class="flex gap-2">
      <%= render Link::ChipComponent.new(
        href: "#",
        active: true,
      ) do %>
        アルバム
      <% end %>
      <%= render Link::ChipComponent.new(
        href: "#",
        active: false,
      ) do %>
        アーティスト
      <% end %>
      <%= render Link::ChipComponent.new(
        href: "#",
        active: false,
      ) do %>
        曲
      <% end %>
    </div>
  </div>
</div>
