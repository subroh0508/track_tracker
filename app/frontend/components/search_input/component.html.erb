<%= form_with url: url, method: method.to_sym, data: data, class: classes do |_| %>
  <%= render Form::LabelComponent.new(
    label_for: id,
    classes: "sr-only",
  ) do %>
    <%= label %>
  <% end %>
  <div class="relative">
    <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
      <svg class="w-4 h-4 text-neutral-500 dark:text-neutral-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
      </svg>
    </div>
    <%= render Form::InputComponent.new(
      type: type,
      id: id,
      placeholder: placeholder,
      value: value,
      classes: "block w-full p-4 ps-10",
    ) %>
    <%= render Button::Component.new(
      variant: Button::CONTAINED,
      type: "submit",
      size: "px-4 py-2 text-sm",
      classes: "absolute end-2.5 bottom-2.5"
    ) do %>
      <%= label %>
    <% end %>
  </div>
  <%= content %>
<% end %>
