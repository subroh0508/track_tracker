<div class="flex flex-row gap-1">
  <%= render Input::Component.new(
    type: type,
    id: "with-icon-input",
    placeholder: placeholder,
    required: false,
    disabled: false,
    value: nil,
  ) do |c| %>
    <% c.with_icon(Icon::Envelope) %>
  <% end %>
  <%= render Input::Component.new(
    type: type,
    id: "required-with-icon-input",
    placeholder: placeholder,
    required: true,
    disabled: false,
    value: nil,
  ) do |c| %>
    <% c.with_icon(Icon::Envelope) %>
  <% end %>
  <%= render Input::Component.new(
    type: type,
    id: "disabled-with-icon-input",
    placeholder: placeholder,
    required: false,
    disabled: true,
    value: nil,
  ) do |c| %>
    <% c.with_icon(Icon::Envelope) %>
  <% end %>
</div>
