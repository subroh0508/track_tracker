<%= render Card::Component.new(
  classes: classes,
) do |component| %>
  <% component.with_thumbnail do %>
    <div class="p-5">
      Playlist ID: <%= id %>
    </div>
    <%= render Youtube::PlaylistIframeComponent.new(id: id) %>
  <% end %>
  <% component.with_header do %>
    <%= title %>
  <% end %>
  <% component.with_description do %>
    <% if tracks.present? %>
      <ol>
        <% tracks.each_with_index do |track, i| %>
          <li><%= "#{i + 1}. #{track[:title]}" %></li>
        <% end %>
      </ol>
    <% end %>
  <% end %>
<% end %>
